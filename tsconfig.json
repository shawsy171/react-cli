{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "outDir": "bin",
        "rootDir": "./src",
        "esModuleInterop": true,
        "module": "ESNext", // "module": "CommonJS" should work too
        "moduleResolution": "Node"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "src/templates",
        "src/snippits"
    ],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}
